{
  "name": "mcp-router",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "integration-tests"
  ],
  "scripts": {
    "kill-ports": "npx kill-port 3000 3001",
    "start": "npm run kill-ports && concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:frontend": "cd packages/frontend && npm start",
    "start:backend": "cd packages/backend && npm run dev",
    "build": "npm run build:shared:minimal && npm run build:backend:minimal && npm run build:frontend",
    "build:shared": "cd packages/shared && npm run build",
    "build:shared:minimal": "cd packages/shared && npm run build:minimal",
    "build:backend": "cd packages/backend && npm run build",
    "build:backend:minimal": "cd packages/backend && npm run build:minimal",
    "build:frontend": "cd packages/frontend && npm run build",
    "test": "npm run test:shared && npm run test:backend && npm run test:frontend",
    "test:shared": "cd packages/shared && npm run test",
    "test:backend": "cd packages/backend && npm run test",
    "test:frontend": "cd packages/frontend && npm run test",
    "test:integration": "cd integration-tests && npm test",
    "test:e2e": "cd integration-tests && npm run test:e2e",
    "test:api": "cd integration-tests && npm run test:api",
    "clean": "npm run clean:shared && npm run clean:backend && npm run clean:frontend",
    "clean:shared": "cd packages/shared && npm run clean",
    "clean:backend": "cd packages/backend && npm run clean",
    "clean:frontend": "cd packages/frontend && npm run clean",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "concurrently": "^8.2.2",
    "css-select": "^5.1.0",
    "eslint-plugin-markdown": "^5.1.0",
    "kill-port": "^2.0.1",
    "nth-check": "^2.1.1",
    "postcss": "^8.5.3",
    "resolve-url-loader": "^5.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "serialize-javascript": "^6.0.2",
    "svgo": "^3.3.2",
    "typescript": "^4.9.5",
    "workbox-build": "^7.3.0",
    "workbox-webpack-plugin": "^7.3.0"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "mermaid": "^11.4.1",
    "reactflow": "^11.11.4",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  }
}
