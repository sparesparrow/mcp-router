# Application
PROJECT_NAME=System Context Monitor
VERSION=0.1.0
API_V1_STR=/api/v1

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/systemcontext

# Redis
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_BURST=200

# WebSocket
WS_MESSAGE_QUEUE=ws_messages
WS_HEARTBEAT_INTERVAL=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:5173"] 